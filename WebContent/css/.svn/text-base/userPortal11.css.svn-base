@CHARSET "ISO-8859-1";
ul {
	list-style: none;
	padding: 0px;
	margin: 0px;
}
//ygg
ul li {
	display: block;
	position: relative;
	float: left;
	border: 1px solid #000;
	width: 240px;
}

li ul {
	display: none;
}

ul li a {
	display: block;
	background: #000;
	padding: 5px 5px 5px 5px;
	text-decoration: none;
	white-space: nowrap;
	color: #fff;
}

ul li a:hover {
	background: #CCCC84;
}

li:hover ul {
	display: block;
	position: absolute;
}

li:hover li {
	float: none;
}

li:hover a {
	background: black;
}

li:hover li a:hover {
	background: #CCCC84;
}

#drop-nav li ul li {
	border-top: 100px;
}
div.img {
    margin: 5px;
    padding: 5px;
    border: 1px solid #0000ff;
    height: auto;
    width: auto;
    float: left;
    text-align: center;
}

